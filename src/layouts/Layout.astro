---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Countdown timer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	* {
		margin: 0;
		padding: 0;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #000;
		background-size: 224px;
		overflow: hidden;
	}
	.code-font {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.timer {
		font-size: 7vw;
		text-shadow: 10px 10px 5px #202020;
		margin: auto auto;
		text-align: center;
	}

	.timer-container {
		display: flex;
		flex-wrap: wrap;
		min-height: 100vh;
		margin: 0;
	}

	.timer-container div {
		flex-grow: 1;
	}

	.timer-container .break {
		flex-basis: 100%;
		width: 0;
	}

	#sub {
		font-size: 1.5vw;
		text-shadow: 10px 10px 5px #202020;
		margin: auto auto;
		text-align: center;
	}
</style>
